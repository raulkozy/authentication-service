{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@module/*": ["src/module/*"],
      "@constant/*": ["src/constant/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@common/*": ["src/common/*"],
      "@util/*": ["src/util/*"],
      "@adapter/*": ["src/adapter/*"]
    }
  }
}
